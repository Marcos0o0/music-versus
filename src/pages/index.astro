---
import Layout from '../layouts/Layout.astro';
import ArtistCard from '../components/ArtistCard.astro';

// Obtener la imagen del artista desde Spotify
const getArtistImage = async (spotifyId: string) => {
  try {
    const clientId = import.meta.env.SPOTIFY_CLIENT_ID;
    const clientSecret = import.meta.env.SPOTIFY_CLIENT_SECRET;
    
    const credentials = btoa(`${clientId}:${clientSecret}`);
    
    const tokenResponse = await fetch('https://accounts.spotify.com/api/token', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/x-www-form-urlencoded',
        'Authorization': `Basic ${credentials}`
      },
      body: 'grant_type=client_credentials'
    });
    
    const { access_token } = await tokenResponse.json();
    
    const artistResponse = await fetch(`https://api.spotify.com/v1/artists/${spotifyId}`, {
      headers: { 'Authorization': `Bearer ${access_token}` }
    });
    
    const artistData = await artistResponse.json();
    return artistData.images[0]?.url || 'https://via.placeholder.com/400x400/1f2937/9333ea?text=BTS';
  } catch (error) {
    console.error('Error fetching artist image:', error);
    return 'https://via.placeholder.com/400x400/1f2937/9333ea?text=BTS';
  }
};

const btsImage = await getArtistImage('3Nrfpe0tUJi4K4DXYWgMUX');

const artists = [
  {
    id: 'bts',
    name: 'BTS',
    image: btsImage,
    description: 'Grupo de K-pop surcoreano formado en 2010 por Big Hit Entertainment',
    spotifyId: '3Nrfpe0tUJi4K4DXYWgMUX'
  }
];
---

<Layout title="Music Versus - Elige tu canción favorita">
  <main class="min-h-screen bg-gradient-to-br from-purple-900 via-gray-900 to-black">
    <header class="container mx-auto px-4 py-8">
      <div class="text-center">
        <h1 class="text-6xl font-bold mb-4 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
          Music Versus
        </h1>
        <p class="text-xl text-gray-300">
          Descubre tu canción favorita a través de batallas épicas
        </p>
      </div>
    </header>

    <section class="container mx-auto px-4 py-12">
      <h2 class="text-3xl font-bold mb-8 text-center">Elige un Artista</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {artists.map((artist) => (
          <ArtistCard {...artist} />
        ))}
      </div>
    </section>

    <footer class="container mx-auto px-4 py-8 text-center text-gray-400">
      <p>Powered by Spotify API</p>
    </footer>
  </main>
</Layout>