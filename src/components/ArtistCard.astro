---
interface Props {
  id: string;
  name: string;
  image: string;
  description: string;
  spotifyId: string;
}

const { id, name, image, description } = Astro.props;
---

<div 
  class="group block rounded-2xl overflow-hidden border-2 transition-all duration-300 hover:scale-102 relative"
  style="background-color: #ffffff; border-color: #A89885; box-shadow: 0 4px 20px rgba(68, 68, 43, 0.08);"
>
  <!-- Esquina decorativa -->
  <div class="absolute top-3 right-3 text-2xl opacity-60 group-hover:opacity-100 transition-opacity z-10">
    üå∏
  </div>
  
  <div class="aspect-square overflow-hidden relative" style="background-color: #F5E9E4;">
    <img 
      src={image} 
      alt={name}
      loading="lazy"
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
    />
    <!-- Overlay sutil -->
    <div class="absolute inset-0 bg-gradient-to-t from-white/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  
  <div class="p-6 relative">
    <!-- Detalle floral -->
    <div class="absolute top-0 left-6 w-12 h-px" style="background-color: #926149; transform: translateY(-0.5px);"></div>
    
    <h3 class="text-3xl font-bold mb-3 transition-colors" style="color: #44442B; font-family: Georgia, serif;">
      {name}
    </h3>
    <p class="text-sm line-clamp-2 mb-5 leading-relaxed" style="color: #A89885;">
      {description}
    </p>
    
    <!-- Botones de acci√≥n -->
    <div class="flex gap-2">
      <!-- Bot√≥n principal: Jugar -->
      <a 
        href={`/game/${id}`}
        class="no-underline flex-1 flex items-center justify-center gap-2 py-2.5 px-4 rounded-lg font-semibold transition-all hover:shadow-lg border-2"
        style="background-color: #926149; color: #F5E9E4; border-color: #926149;"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Jugar</span>
      </a>

      <!-- Bot√≥n secundario: Ranking -->
      <a 
        href={`/leaderboard/${id}`}
        class="no-underline flex items-center justify-center gap-2 py-2.5 px-4 rounded-lg font-semibold transition-all hover:shadow-lg border-2"
        style="background-color: transparent; color: #926149; border-color: #926149;"
        title="Ver ranking de canciones"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="hidden sm:inline">Top</span>
        <span>üèÜ</span>
      </a>
    </div>
  </div>
</div>

<style>
  div:hover h3 {
    color: #926149 !important;
  }
  
  a[href^="/game"]:hover {
    background-color: #6b6b45 !important;
  }
  
  a[href^="/leaderboard"]:hover {
    background-color: #926149 !important;
    color: #F5E9E4 !important;
  }
</style>